<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:t="http://schemas.xceed.com/wpf/xaml/toolkit"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				mc:Ignorable="d"
				x:Class="CommandGeneratorWPF.MainWindow"
				Title="Command Workbench v0.7.6.35"
				Icon="assets/iconLarge.png"
				WindowStartupLocation="CenterScreen"
				Closed="Window_Closed"
				MinWidth="750"
				MinHeight="600"
				Height="600"
				Width="850">

	<Grid>
		<TabControl x:Name="CmdTabs"
								VerticalAlignment="Stretch"
								HorizontalAlignment="Stretch"
								Margin="5"
								SelectedIndex="1">

			<TabItem Header="/give"
							 FontSize="12">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>

					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="3*" />
						</Grid.ColumnDefinitions>

						<TreeView x:Name="GiveTree"
											Padding="2">
							<TreeViewItem IsSelected="True"
														IsExpanded="True">
								<TreeViewItem.Header>
									<StackPanel Orientation="Horizontal">
										<Image Source="assets/ui/doc_compound.png" />
										<TextBlock Text="tag" />
									</StackPanel>
								</TreeViewItem.Header>
							</TreeViewItem>
						</TreeView>
						<Grid Grid.Column="1">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
								<RowDefinition Height="*" />
							</Grid.RowDefinitions>

							<Grid Tag="TopBar">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="Auto" />
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="Auto" />
									<ColumnDefinition Width="Auto" />
									<ColumnDefinition Width="Auto" />
									<ColumnDefinition Width="Auto" />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>

								<TextBlock Text="/give"
													 Margin="10,5,5,10"
													 VerticalAlignment="Center"
													 FontSize="18" />

								<TextBox x:Name="PlayerBox"
												 Text="einsteinsci"
												 Grid.Column="1"
												 Margin="5,5,0,5"
												 FontSize="14"
												 VerticalAlignment="Center"
												 Height="23"
												 Padding="5,0"
												 TextChanged="PlayerBox_TextChanged" />
								<Button x:Name="SelectorBtn"
												Content="@"
												Grid.Column="2"
												Margin="-1,5,5,5"
												FontSize="14"
												VerticalAlignment="Center"
												Height="23"
												Width="24"
												Click="SelectorBtn_Click" />

								<Button x:Name="SelectItemBtn"
												Margin="5"
												Grid.Column="3"
												Click="SelectItemBtn_Click">
									<StackPanel Orientation="Horizontal">
										<Image x:Name="SelectedItemImg"
													 Height="32"
													 Width="32"
													 Margin="5"
													 Source="{Binding ImageSource}" />
										<TextBlock x:Name="SelectedItemTxt"
															 VerticalAlignment="Center"
															 Margin="10,0"
															 Text="{Binding ShortName}"
															 FontSize="14"
															 MinWidth="32" />
										<TextBlock x:Name="SelectedItemIdTxt"
															 VerticalAlignment="Center"
															 Margin="0,0,10,0"
															 Text="(1)"
															 FontSize="14"
															 Foreground="Gray" />

									</StackPanel>
								</Button>

								<t:ByteUpDown x:Name="ItemCountUpDown"
															Value="1"
															Margin="5"
															Grid.Column="4"
															VerticalAlignment="Center"
															Width="64"
															VerticalContentAlignment="Center"
															FontSize="14"
															Minimum="1"
															ValueChanged="ItemCountUpDown_ValueChanged" />

								<TextBox x:Name="ItemMetaTxt"
												 Text="0"
												 Margin="5,16"
												 Grid.Column="5"
												 VerticalAlignment="Center"
												 Width="64"
												 TextAlignment="Center"
												 FontSize="14"
												 IsReadOnly="True"
												 ToolTip="Metadata associated with Item"
												 Height="24"
												 VerticalContentAlignment="Center"
												 TextChanged="ItemMetaTxt_TextChanged" />
								<TextBlock Text="{}{...}"
													 Margin="5,5,25,5"
													 Grid.Column="6"
													 VerticalAlignment="Center"
													 FontSize="18"
													 FontFamily="Consolas" />
							</Grid>

							<TextBlock x:Name="WarningTxt"
												 Text="Warning: ---"
												 Grid.Row="1"
												 Foreground="Red"
												 Margin="10,0"
												 Visibility="Hidden" />

							<TabControl Margin="5,10,0,0"
													Grid.Row="2">
								<TabItem x:Name="GeneralTab"
												 Header="General">
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="*" />
											<ColumnDefinition Width="*" />
										</Grid.ColumnDefinitions>

										<StackPanel Orientation="Vertical"
																Margin="5,5,0,5">
											<CheckBox x:Name="UnbreakableCheck"
																Content="Unbreakable (tools only)"
																Margin="5"
																FontSize="14"
																FontWeight="SemiBold"
																VerticalContentAlignment="Center"
																Checked="UnbreakableCheck_Changed"
																Unchecked="UnbreakableCheck_Changed" />

											<Grid Margin="0,0,0,5">
												<Grid.ColumnDefinitions>
													<ColumnDefinition Width="Auto" />
													<ColumnDefinition Width="*" />
												</Grid.ColumnDefinitions>

												<TextBlock x:Name="GiveDamageTxt"
																	 Text="Damage:"
																	 FontSize="14"
																	 FontWeight="SemiBold"
																	 Margin="5,0"
																	 VerticalAlignment="Center" />
												<t:IntegerUpDown x:Name="GiveDamageUpDown"
																				 Value="0"
																				 Grid.Column="1"
																				 Height="22"
																				 ValueChanged="GiveDamageUpDown_ValueChanged"
																				 ParsingNumberStyle="Integer"
																				 Minimum="0"
																				 Maximum="50000"
																				 DisplayDefaultValueOnEmptyText="True"
																				 DefaultValue="0"
																				 MouseWheelActiveTrigger="MouseOver" />
											</Grid>

											<TextBlock Text="Can be used to destroy:"
																 FontSize="14"
																 FontWeight="SemiBold"
																 Margin="5" />
											<Button x:Name="CanDestroySelectBtn"
															Click="CanDestroySelectBtn_Click"
															HorizontalAlignment="Left"
															Margin="5,0,5,5">
												<StackPanel Orientation="Horizontal"
																		Margin="2">
													<Image Source="{Binding ImageSource}"
																 Height="32"
																 Width="32"
																 Margin="5" />
													<TextBlock Text="{Binding ShortName}"
																		 FontSize="14"
																		 MinWidth="32"
																		 VerticalAlignment="Center"
																		 Margin="5,0" />
													<TextBlock Text="{Binding ParentheticalID}"
																		 VerticalAlignment="Center"
																		 Foreground="Gray"
																		 MinWidth="16"
																		 Margin="5,0" />
												</StackPanel>
											</Button>
											<Grid Margin="0,0,0,5">
												<Grid.ColumnDefinitions>
													<ColumnDefinition Width="*" />
													<ColumnDefinition Width="Auto" />
												</Grid.ColumnDefinitions>

												<ListBox x:Name="CanDestroyItemsList"
																 Margin="5,0"
																 Height="90">
													<ListBox.ItemTemplate>
														<DataTemplate>
															<StackPanel Orientation="Horizontal">
																<Image Source="{Binding ImageSource}"
																			 Width="32"
																			 Height="32" />
																<TextBlock Text="{Binding ShortName}"
																					 FontSize="12"
																					 VerticalAlignment="Center"
																					 Margin="5" />
																<TextBlock Text="{Binding ParentheticalID}"
																					 VerticalAlignment="Center"
																					 Foreground="Gray"
																					 Margin="5" />
															</StackPanel>
														</DataTemplate>
													</ListBox.ItemTemplate>
												</ListBox>
												<StackPanel Grid.Column="1">
													<Button x:Name="CanDestroyAddBtn"
																	Content="Add"
																	Width="64"
																	Margin="0,0,5,0"
																	Click="CanDestroyAddBtn_Click" />
													<Button x:Name="CanDestroyRemoveBtn"
																	Content="Remove"
																	Width="64"
																	Margin="0,5,5,0"
																	Click="CanDestroyRemoveBtn_Click" />
												</StackPanel>
											</Grid>
										</StackPanel>

										<StackPanel x:Name="CanPlaceOnPanel"
																Orientation="Vertical"
																Margin="5"
																Grid.Column="1">
											<Button Tag="BlockEntityTagBtn"
															Content="Tile Entity Data (coming soon!)"
															IsEnabled="False"
															FontSize="12"
															Margin="5,5,0,0"
															Padding="1,2" />

											<Label Content="Can only be placed on:"
														 FontSize="14"
														 FontWeight="SemiBold"
														 Margin="5,30,5,5"
														 Padding="0,0,5,0" />
											<Button x:Name="CanPlaceOnSelectBtn"
															Click="CanPlaceOnSelectBtn_Click"
															HorizontalAlignment="Left"
															Margin="5,0,5,5">
												<StackPanel Orientation="Horizontal"
																		Margin="2">
													<Image Source="{Binding ImageSource}"
																 Height="32"
																 Width="32"
																 Margin="5" />
													<TextBlock Text="{Binding ShortName}"
																		 FontSize="14"
																		 MinWidth="32"
																		 VerticalAlignment="Center"
																		 Margin="5,0" />
													<TextBlock Text="{Binding ParentheticalID}"
																		 VerticalAlignment="Center"
																		 Foreground="Gray"
																		 MinWidth="16"
																		 Margin="5,0" />
												</StackPanel>
											</Button>
											<Grid Margin="0,0,0,5">
												<Grid.ColumnDefinitions>
													<ColumnDefinition Width="*" />
													<ColumnDefinition Width="Auto" />
												</Grid.ColumnDefinitions>

												<ListBox x:Name="CanPlaceOnItemsList"
																 Height="90"
																 Margin="5,0">
													<ListBox.ItemTemplate>
														<DataTemplate>
															<StackPanel Orientation="Horizontal">
																<Image Source="{Binding ImageSource}"
																			 Width="32"
																			 Height="32" />
																<TextBlock Text="{Binding ShortName}"
																					 FontSize="12"
																					 VerticalAlignment="Center"
																					 Margin="5" />
																<TextBlock Text="{Binding ParentheticalID}"
																					 VerticalAlignment="Center"
																					 Foreground="Gray"
																					 Margin="5" />
															</StackPanel>
														</DataTemplate>
													</ListBox.ItemTemplate>
												</ListBox>
												<StackPanel Grid.Column="1">
													<Button x:Name="CanPlaceOnAddBtn"
																	Content="Add"
																	Width="64"
																	Click="CanPlaceOnAddBtn_Click" />
													<Button x:Name="CanPlaceOnRemoveBtn"
																	Content="Remove"
																	Width="64"
																	Margin="0,5,0,0"
																	Click="CanPlaceOnRemoveBtn_Click" />
												</StackPanel>
											</Grid>
										</StackPanel>
									</Grid>
								</TabItem>

								<TabItem x:Name="DisplayTab"
												 Header="Display">
									<ScrollViewer>
										<Grid Margin="0,5,0,0">
											<Grid.ColumnDefinitions>
												<ColumnDefinition />
												<ColumnDefinition Width="Auto" />
											</Grid.ColumnDefinitions>

											<StackPanel>
												<Grid Margin="5,5,5,0">
													<Grid.ColumnDefinitions>
														<ColumnDefinition Width="Auto" />
														<ColumnDefinition Width="*" />
													</Grid.ColumnDefinitions>

													<TextBlock Text="Name:"
																		 FontSize="12"
																		 FontWeight="SemiBold"
																		 Margin="0,0,5,0" />
													<TextBox x:Name="DisplayNameBox"
																	 Grid.Column="1"
																	 FontSize="12"
																	 TextChanged="DisplayNameBox_TextChanged" />
												</Grid>
												<Grid Margin="5">
													<Grid.ColumnDefinitions>
														<ColumnDefinition Width="Auto" />
														<ColumnDefinition Width="*" />
													</Grid.ColumnDefinitions>

													<TextBlock Text="Lore:"
																		 FontSize="12"
																		 FontWeight="SemiBold"
																		 Margin="0,0,5,0" />
													<TextBox x:Name="LoreLineBox"
																	 Grid.Column="1"
																	 FontSize="12" />
												</Grid>
												<Grid>
													<Grid.ColumnDefinitions>
														<ColumnDefinition />
														<ColumnDefinition Width="64" />
													</Grid.ColumnDefinitions>

													<ListBox x:Name="LoreList"
																	 FontSize="12"
																	 Height="100"
																	 Margin="5,0" />
													<StackPanel Grid.Column="1"
																			Margin="0,0,5,0">
														<Button x:Name="LoreAddBtn"
																		Content="Add"
																		Margin="0,0,0,5"
																		Click="LoreAddBtn_Click" />
														<Button x:Name="LoreRemoveBtn"
																		Content="Remove"
																		Click="LoreRemoveBtn_Click" />
													</StackPanel>
												</Grid>
											</StackPanel>

											<StackPanel Grid.Column="1">
												<ToggleButton x:Name="EnableCustomColorToggle"
																			Content="Enable Custom Color"
																			FontSize="12"
																			Margin="5,5,5,0"
																			Padding="2"
																			Checked="EnableCustomColorToggle_Checked"
																			Unchecked="EnableCustomColorToggle_Unchecked" />
												<StackPanel x:Name="CustomColorStack"
																		IsEnabled="False">
													<Grid Margin="5">
														<Grid.ColumnDefinitions>
															<ColumnDefinition Width="Auto" />
															<ColumnDefinition Width="*" />
														</Grid.ColumnDefinitions>

														<Label Content="Leather Armor Color:"
																	 FontSize="12"
																	 FontWeight="SemiBold"
																	 Margin="0,0,5,0" />
														<TextBox x:Name="DisplayColorBox"
																		 IsReadOnly="True"
																		 VerticalAlignment="Center"
																		 Grid.Column="1"
																		 FontSize="12"
																		 Text="9135428" />
													</Grid>
													<t:ColorCanvas x:Name="DisplayColorCanvas"
																				 Margin="5,0"
																				 UsingAlphaChannel="False"
																				 SelectedColor="#FF66492F"
																				 SelectedColorChanged="DisplayColorCanvas_SelectedColorChanged" />
												</StackPanel>
											</StackPanel>
										</Grid>
									</ScrollViewer>
								</TabItem>

								<TabItem x:Name="EnchantTab"
												 Header="Enchantments">
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="*" />
											<ColumnDefinition Width="*" />
										</Grid.ColumnDefinitions>

										<StackPanel Orientation="Vertical"
																Margin="5">
											<Grid Tag="Repair Cost"
														Margin="5,0,5,5">
												<Grid.ColumnDefinitions>
													<ColumnDefinition Width="Auto" />
													<ColumnDefinition Width="*" />
												</Grid.ColumnDefinitions>

												<TextBlock Text="Anvil Repair Cost (levels):"
																	 FontSize="14"
																	 FontWeight="SemiBold" />
												<t:IntegerUpDown x:Name="EnchRepairCost"
																				 Value="1"
																				 Grid.Column="1"
																				 Margin="5,0,0,0"
																				 Minimum="0"
																				 Maximum="99"
																				 ValueChanged="EnchRepairCost_ValueChanged" />
											</Grid>
											<Button x:Name="EnchTypeBtn"
															Content="Enchanting Type: Standard"
															Tag="std"
															Padding="1,2"
															Margin="5"
															Click="EnchTypeBtn_Click" />
											<Grid Tag="Ench Combo + Lvl"
														Margin="5">
												<Grid.ColumnDefinitions>
													<ColumnDefinition Width="*" />
													<ColumnDefinition Width="Auto" />
												</Grid.ColumnDefinitions>

												<ComboBox x:Name="EnchantmentCombo"
																	SelectedIndex="0">

													<ComboBoxItem Content="Protection" />
												</ComboBox>

												<t:IntegerUpDown x:Name="EnchLevelUpDn"
																				 Value="1"
																				 Width="61"
																				 Grid.Column="1"
																				 Margin="5,0,0,0"
																				 Maximum="99"
																				 Minimum="1" />
											</Grid>
											<CheckBox x:Name="EnchShowAllCheck"
																Content="Show All Enchantments"
																Margin="5,0"
																Checked="EnchShowAllCheck_Changed"
																Unchecked="EnchShowAllCheck_Changed" />
											<StackPanel Orientation="Horizontal"
																	Margin="5">
												<Button x:Name="EnchAddBtn"
																Content="Add"
																Width="72"
																Margin="0,0,5,0"
																Padding="1,2"
																Click="EnchAddBtn_Click" />
												<Button x:Name="EnchRemoveBtn"
																Content="Remove"
																Width="72"
																Padding="1,2"
																Click="EnchRemoveBtn_Click" />
											</StackPanel>
										</StackPanel>

										<StackPanel Grid.Column="1"
																Margin="-5,5,5,5">
											<TextBlock Text="Current Enchantments"
																 FontSize="14"
																 FontWeight="SemiBold"
																 Margin="5,0,0,0" />
											<ListBox x:Name="EnchList"
															 Margin="5,5,0,5"
															 Height="150" />
										</StackPanel>
									</Grid>
								</TabItem>

								<TabItem x:Name="PotionTab"
												 Header="Potion">
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="*" />
											<ColumnDefinition Width="*" />
										</Grid.ColumnDefinitions>

										<StackPanel Tag="Left"
																Margin="5">
											<Grid Tag="Title + Meta">
												<Grid.ColumnDefinitions>
													<ColumnDefinition Width="Auto" />
													<ColumnDefinition Width="*" />
												</Grid.ColumnDefinitions>

												<TextBlock Text="Base (damage value):"
																	 ToolTip="The base effect determines the appearance and damage value of the potion. Its effect means nothing when custom effects are applied"
																	 FontSize="14"
																	 FontWeight="SemiBold" />
												<TextBox x:Name="PotionMetaBox"
																 Grid.Column="1"
																 Text="0"
																 ToolTip="The base effect determines the appearance and damage value of the potion. Its effect means nothing when custom effects are applied"
																 IsReadOnly="True"
																 Margin="5,0,0,0"
																 HorizontalContentAlignment="Center" />
											</Grid>

											<Grid Tag="Combo + Str"
														Margin="0,5,0,0">
												<Grid.ColumnDefinitions>
													<ColumnDefinition Width="*" />
													<ColumnDefinition Width="Auto" />
												</Grid.ColumnDefinitions>

												<ComboBox x:Name="PotionBaseCombo"
																	SelectedIndex="0"
																	Margin="0,0,5,0"
																	SelectionChanged="PotionBaseCombo_SelectionChanged">
													<ComboBoxItem Content="Speed" />
												</ComboBox>

												<Button x:Name="PotionBaseStrBtn"
																Content="I"
																Width="56"
																Grid.Column="1"
																Click="PotionBaseStrBtn_Click" />
											</Grid>

											<Grid Tag="Extended + Splash"
														Margin="0,5,0,0">
												<Grid.ColumnDefinitions>
													<ColumnDefinition Width="*" />
													<ColumnDefinition Width="*" />
												</Grid.ColumnDefinitions>

												<CheckBox x:Name="PotionBaseExtendedCheck"
																	Content="Extended"
																	Checked="PotionRefreshHandler"
																	Unchecked="PotionRefreshHandler" />
												<CheckBox x:Name="PotionBaseSplashCheck"
																	Content="Splash"
																	Grid.Column="1"
																	Checked="PotionRefreshHandler"
																	Unchecked="PotionRefreshHandler" />
											</Grid>

											<Separator Margin="-2,5" />

											<TextBlock Text="Custom:"
																 FontSize="14"
																 FontWeight="SemiBold" />

											<Grid>
												<Grid.ColumnDefinitions>
													<ColumnDefinition Width="*" />
													<ColumnDefinition Width="Auto" />
												</Grid.ColumnDefinitions>

												<ComboBox x:Name="PotionCustomCombo"
																	SelectedIndex="0"
																	Margin="0,0,5,0">
													<ComboBoxItem Content="Speed" />
												</ComboBox>

												<t:ByteUpDown x:Name="PotionCustomLvlUpDown"
																			Value="1"
																			Width="56"
																			Grid.Column="1"
																			Minimum="1"
																			ToolTip="This is the apparent affect to the player. In the data, the effect is zero-based, so that Speed II, for example, will have an amplifier of 1." />
											</Grid>

											<Grid Margin="0,5,0,0">
												<Grid.ColumnDefinitions>
													<ColumnDefinition Width="Auto" />
													<ColumnDefinition Width="*" />
												</Grid.ColumnDefinitions>

												<TextBlock Text="Duration (seconds):" />
												<t:SingleUpDown x:Name="PotionDurationUpDown"
																				Value="30"
																				Grid.Column="1"
																				Margin="5,0,0,0"
																				Minimum="0.05"
																				MouseWheelActiveTrigger="MouseOver"
																				FormatString="#.00"
																				ValueChanged="PotionDurationUpDown_ValueChanged" />
											</Grid>

											<Grid>
												<Grid.ColumnDefinitions>
													<ColumnDefinition Width="*" />
													<ColumnDefinition Width="*" />
												</Grid.ColumnDefinitions>

												<CheckBox x:Name="PotionParticlesCheck"
																	Content="Show Particles"
																	IsChecked="True"
																	Margin="0,5,0,0"
																	Checked="PotionParticlesCheck_Checked"
																	Unchecked="PotionParticlesCheck_Unchecked" />
												<CheckBox x:Name="PotionAmbientCheck"
																	Content="Ambient"
																	ToolTip="Show particles as partially transparent, like those from a beacon-induced effect."
																	Grid.Column="1"
																	Margin="0,5,0,0" />
											</Grid>

											<StackPanel Orientation="Horizontal"
																	Margin="0,5,0,0">
												<Button x:Name="PotionCustomAddBtn"
																Content="Add"
																Width="72"
																Padding="1,2"
																Click="PotionCustomAddBtn_Click" />
												<Button x:Name="PotionCustomRemoveBtn"
																Content="Remove"
																Width="72"
																Margin="5,0,0,0"
																Padding="1,2"
																Click="PotionCustomRemoveBtn_Click" />
											</StackPanel>
										</StackPanel>

										<Grid Grid.Column="1"
													Margin="5,0,0,0">
											<Grid.RowDefinitions>
												<RowDefinition Height="Auto" />
												<RowDefinition Height="*" />
											</Grid.RowDefinitions>

											<TextBlock Text="Current Effects:"
																 FontSize="14"
																 FontWeight="SemiBold"
																 Margin="0,5,0,0" />
											<ListBox x:Name="PotionList"
															 Grid.Row="1"
															 Margin="0,0,5,5" />
										</Grid>
									</Grid>
								</TabItem>

								<TabItem x:Name="BookTab"
												 Header="Book">
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="Auto" />
											<ColumnDefinition Width="*" />
										</Grid.ColumnDefinitions>

										<StackPanel Tag="Left">
											<Grid x:Name="BookLitGrid"
														Margin="5">
												<Grid.ColumnDefinitions>
													<ColumnDefinition Width="Auto" />
													<ColumnDefinition Width="*" />
												</Grid.ColumnDefinitions>
												<Grid.RowDefinitions>
													<RowDefinition Height="Auto" />
